{
  "name": "TagProReplays",
  "description": "Save Replays from within TagPro Games",
  "version": "1.2.20",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "indexedDBUtils.js",
      "messaging.js",
      "textures.js",
      "background.js",
      "map_draw_functions.js",
      "filesystem.js",
      "lib/whammy.js",
      "lib/jquery.js",
      "lib/jszip.min.js",
      "lib/FileSaver.min.js"
    ],
    "persistent": true
  },
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*.koalabeast.com/*",
        "http://*.newcompte.fr/*",
        "http://tangent.jukejuice.com/*"
      ],
      "js": [
        "lib/jquery.js",
        "cookies.js",
        "messaging.js",
        "textures.js",
        "map_draw_functions.js",
        "ui/viewer.js",
        "menu.js",
        "TagProReplays.js",
        "ui/bootstrap.min.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "replayRecording.js",
    "img/tiles.png",
    "img/portal.png",
    "img/speedpad.png",
    "img/speedpadred.png",
    "img/speedpadblue.png",
    "img/tagpro.png",
    "img/rollingbomb.png",
    "img/splats.png",
    "img/flair.png",
    "ui/spinkit.css",
    "ui/menus.css",
    "ui/menus.html",
    "ui/menus.js",
    "ui/viewer.html",
    "ui/viewer.css",
    "ui/bootstrap.min.css",
    "ui/bootstrap.css",
    "ui/glyphicons-halflings-regular.eot",
    "ui/glyphicons-halflings-regular.svg",
    "ui/glyphicons-halflings-regular.ttf",
    "ui/glyphicons-halflings-regular.woff"
  ]
}
